{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "A sample GraphQL API built in Node.js with gRPC back-end microservices. Used for learning/trial purposes only.",
  "scripts": {
    "lint": "eslint --max-warnings=0 ./src",
    "lint:fix": "eslint --fix ./src",
    "compile": "rimraf dist && babel src --out-dir dist -s inline --copy-files",
    "start": "nodemon --exec babel-node ./src/index.js",
    "test": "jest --detectOpenHandles",
    "copy:protos": "cpy ../_proto ./src/_proto",
    "precommit": "npm run lint:fix",
    "prepush": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjsicam/node-graphql-microservices.git"
  },
  "keywords": [
    "graphql",
    "microservices",
    "grpc"
  ],
  "author": "Benj Sicam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjsicam/node-graphql-microservices/issues"
  },
  "homepage": "https://github.com/benjsicam/node-graphql-microservices#readme",
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "@grpc/proto-loader": "^0.5.3",
    "aigle": "^1.14.1",
    "bcryptjs": "^2.4.3",
    "core-js": "^3.6.4",
    "dataloader": "^2.0.0",
    "glob": "^7.1.6",
    "graphql-redis-subscriptions": "^2.2.1",
    "graphql-scalars": "^1.0.7",
    "graphql-subscriptions": "^1.1.0",
    "graphql-yoga": "^1.18.3",
    "graphql-yup-middleware": "0.0.1",
    "grpc": "^1.24.2",
    "ioredis": "^4.16.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "pino": "^5.17.0",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "babel-plugin-import-glob": "^2.0.0",
    "babel-plugin-inline-dotenv": "^1.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "cpy-cli": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "graphql-request": "^1.8.2",
    "jest": "^25.1.0",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.6.1",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "globals": {},
    "testRegex": "test/*.+(test.js)",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/logger.js",
      "!src/main.js",
      "!src/playground-query.js",
      "!src/server.js",
      "!**/node_modules/**"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
