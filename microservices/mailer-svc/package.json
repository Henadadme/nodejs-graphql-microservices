{
  "name": "mailer-svc",
  "version": "1.0.0",
  "description": "gRPC microservice back-end for mailer. Used for learning/trial purposes only.",
  "scripts": {
    "lint": "eslint --max-warnings=0 ./src",
    "lint:fix": "eslint --fix ./src",
    "build": "rimraf dist && babel src --out-dir dist -s inline --copy-files",
    "start": "nodemon --config nodemon.json --exec babel-node ./src/index.js",
    "test": "jest --detectOpenHandles",
    "e2e:local": "npm run lint:fix && npm run build && npm test",
    "copy:protos": "cpy ../../_proto ./src/_proto"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjsicam/node-graphql-microservices.git"
  },
  "keywords": [
    "graphql",
    "microservices",
    "grpc"
  ],
  "author": "Benj Sicam <benjsicam@gmail.com> (https://github.com/benjsicam)",
  "contributors": [
    "Achilles Dinglasan <akzdinglasan@gmail.com> (https://github.com/akzdinglasan)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjsicam/node-graphql-microservices/issues"
  },
  "homepage": "https://github.com/benjsicam/node-graphql-microservices#readme",
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "@grpc/proto-loader": "^0.5.4",
    "@malijs/logger": "^0.5.0",
    "@malijs/onerror": "^0.3.1",
    "core-js": "^3.6.5",
    "email-templates": "^7.0.4",
    "glob": "^7.1.6",
    "grpc": "^1.24.2",
    "grpc-health-check": "^1.7.0",
    "lodash": "^4.17.15",
    "mali": "^0.20.0",
    "nodemailer": "^6.4.6",
    "pino": "^6.2.0",
    "pug": "^2.0.4",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "babel-plugin-inline-dotenv": "^1.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "cpy-cli": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-standard": "^3.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "faker": "^4.1.0",
    "jest": "^25.3.0",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.3",
    "pino-pretty": "^4.0.0",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "globals": {},
    "testRegex": "test/*.+(test.js)",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/db.js",
      "!src/index.js",
      "!src/logger.js",
      "!src/main.js",
      "!src/models/*.js",
      "!src/services/health-check.service.js",
      "!**/node_modules/**"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
